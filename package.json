{
  "name": "stripe-to-zod",
  "description": "A simple tool to generate zod schemas from stripe openapi specs",
  "version": "1.0.0",
  "author": "",
  "devDependencies": {
    "@openapi-codegen/cli": "^1.6.0",
    "@openapi-codegen/typescript": "^3.0.1",
    "@types/node": "^16.18.38",
    "ts-node": "^10.9.1",
    "ts-to-zod": "^3.1.3",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "keywords": [],
  "license": "ISC",
  "main": "src/index.ts",
  "peerDependencies": {
    "tslib": "^2.6.0",
    "zod": "3.21.4"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsup",
    "clean": "rm -rf node_modules/ dist/ pnpm-lock.yaml && pnpm i",
    "gen:specs": "openapi-codegen gen stripe",
    "gen:zod": "ts-to-zod",
    "openapi-codegen": "openapi-codegen",
    "start": "pnpm run build && node dist/index.js"
  }
}
